<div>
  <h3 class="myform">1. Contact details</h3>
  <div class="container", style="width: 70%; margin-left: 30%">
    <div>
      <%= p.label "First Name", :class => "label_spec" %>
      <%= p.text_field :firstName, :class => "text_field_spec" %>
    </div>
    <div>
      <%= p.label "Surname(s)", :class => "label_spec" %>
      <%= p.text_field :surnames, :class => "text_field_spec" %>
    </div>
    <div>
      <%= p.label "Email", :class => "label_spec" %>
      <%= p.email_field :email, :class => "text_field_spec" %>
    </div>      
    <div>
      <%= p.label "Telephone", :class => "label_spec" %>
      <%= p.telephone_field :phone_number, :class => "text_field_spec" %>
    </div>
    <div>
      <%= p.label "Skype Name", :class => "label_spec" %>
      <%= p.text_field :skype_name, :class => "text_field_spec" %>
    </div>
    <div>
      <%= p.label "Linkedin Profile", :class => "label_spec" %>
      <%= p.text_field :linkedin_profile, :class => "text_field_spec" %>
    </div>      
    <div>
      <%= p.label "Picture", :class => "label_spec" %>
      <br/>
      <%= p.file_field :picture, :value => "/uploads/profile/picture/1/DETAIL.jpg" %>
    </div>  
    <br/>
    <hr>
  </div>

  <h3 class="myform">2. Demographics</h3>
  <div class="container", style="width: 70%; margin-left: 30%">
    <div>
      <%= p.label "Birth Date", :class => "label_spec" %>
      <%= p.text_field :born_on, :class => 'datepicker' %><span class="glyphicon glyphicon-calendar"></span>
    </div>
    <br/>    
    <% if current_user.type == "Mentor" %>
      <div class="field">
        <%= p.label "Sex", :class => "label_spec" %>
        <%= p.radio_button :sex, 'Male' %> 
        <%= p.label :sex_male, 'Male' %> &nbsp
        <%= p.radio_button :sex, 'Female' %> 
        <%= p.label :sex_female, 'Female' %>
      </div>
      <br/>
    <% end %>    
    <div class="field">
      <%= p.label "Country of Origin" %><br />
      <%= p.country_select :country_origin, {priority: %w(PT), prompt: 'Please select a country'} %>
    </div>
    <br/>
    <div class="field">
      <%= p.label "Country of Residence" %><br />
      <%= p.country_select :country_residence, {priority: %w(PT), prompt: 'Please select a country'} %>
    </div>
    <br/>
    <div class="field">
      <%= p.label "City of Residence" %><br />
      <%= render partial: 'subregion_select', locals: {parent_region: p.object.country_residence} %>
    </div>
    <br/>
    <div>
      <%= p.label "Marital Status", :class => "label_spec" %>
      <%= p.radio_button :marital_status, 'Single' %> 
      <%= p.label :marital_status_single, 'Single' %> &nbsp
      <%= p.radio_button :marital_status, 'Cohabiting' %> 
      <%= p.label :marital_status_cohabiting, 'Cohabiting' %> &nbsp
      <%= p.radio_button :marital_status, 'Married'  %>
      <%= p.label :marital_status_married, 'Married' %>&nbsp
      <%= p.radio_button :marital_status, 'Divorced'%>
      <%= p.label :marital_status_divorced, 'Divorced' %>&nbsp
      <%= p.radio_button :marital_status, 'Widowed' %>
      <%= p.label :marital_status_widowed, 'Widowed' %>
    </div>
    <br/>
    <div>
      <%= p.label "Number of Children", :class => "label_spec" %>
      <%= p.number_field :number_children, in: 0..20, step: 1, :class => "number_field_spec" %> 
    </div>          
    <br/>
    <hr>
  </div>

  <h3 class="myform">3. Studies</h3>
  <div class="container", style="width: 70%; margin-left: 30%">
    <div>
      <%= p.label "Highest academic title", :class => "long_label_spec" %>
      <%= p.select :highest_academic, options_for_select([@profile.highest_academic, '-----------', 'Please select one',
        'Licence (pre-Bologna)', 
        'Bachelor',
        'Master', 
        'Doctorate', 
        'other' ]) %> 
        <br/>
        <%= p.label "Other (please specify)", :class => "other_label_spec" %>
        <%= p.text_field :highest_academic_other, :class => "other_text_spec" %>
      </div>
      <div>
        <%= p.label "Main area of studies", :class => "long_label_spec" %>
        <%= p.select :main_area, options_for_select([@profile.main_area, '-----------', 'Please select one',
          'Human history',
          'Linguistics',
          'Literature',
          'Arts',
          'Philosophy',
          'Religion',
          'Anthropology',
          'Archaeology',
          'Area studies',
          'Cultural and ethnic studies',
          'Economics',
          'Gender and sexuality studies',
          'Geography',
          'Political science',
          'Psychology',
          'Sociology',
          'Biology',
          'Chemistry',
          'Earth sciences',
          'Physics',
          'Space sciences',
          'Mathematics',
          'Computer sciences',
          'Logic',
          'Statistics',
          'Systems science',
          'Agriculture',
          'Architecture and design',
          'Business',
          'Divinity',
          'Education',
          'Engineering',
          'Environmental studies and forestry',
          'Family and consumer science',
          'Human physical performance and recreation*',
          'Journalism, media studies and communication',
          'Law',
          'Library and museum studies',
          'Medicine',
          'Military sciences',
          'Public administration',
          'Social work',
          'Transportation',
          'Other']) %> <br/>

          <%= p.label "Other (please specify)", :class => "other_label_spec" %>
          <%= p.text_field :main_area_other, :class => "other_text_spec" %>

        </div>  
        <div>
          <%= p.label "Country of main studies", :class => "long_label_spec" %>
          <%= p.country_select :study_country, {priority: %w(PT), prompt: 'Please select a country'}%>
        </div>
        <div>
          <%= p.label "Other (please specify)", :class => "other_label_spec" %>
          <%= p.text_field :studies_other, :class => "other_text_spec" %>
        </div> 
        <br/>
        <hr>
      </div>

      <h3 class="myform">4. Professional experience</h3>
      <div class="container", style="width: 70%; margin-left: 30%">
        <div>
          <%= p.label "Years of professional experience", :class => "long_label_spec"  %>
          <%= p.number_field :years_experience, in: 0..100, step: 1, :class => "number_field_spec"%>
        </div>      
        <div>
          <%= p.label "International Experience", :class => "long_label_spec" %>
          <%= p.text_field :international_experience, :class => "text_field_spec" %>
        </div>
        <div>
          <%= p.label "Curriculum Vitae", :class => "label_spec" %>
          <br/>
          <%= p.file_field :cv %>
        </div>  
        <br/>
        <hr>
      </div>

      <h3 class="myform">5. Company I work for</h3>
      <div class="container", style="width: 70%; margin-left: 30%">
        <div>
          <%= p.label "Company", :class => "long_label_spec" %>
          <%= p.select :company, options_for_select([@profile.company, '-----------', 'Please select one',
            'Accenture',
            'Banco BPI',
            'Banco Efisa',
            'Banco Popular',
            'Banif',
            'Barclays',
            'Caixa Geral de Depósitos',
            'Campofrio Food Group',
